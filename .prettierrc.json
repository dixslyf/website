{
  "$schema": "https://json.schemastore.org/prettierrc",
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "printWidth": 100,
  "useTabs": false,
  "tabWidth": 2,
  "vueIndentScriptAndStyle": true,
  "singleAttributePerLine": true
}
